      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Order Details</h3>
              <div class="row">
            

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                                
                                <hr>
                            <thead>
                            <tr>
                              
                                <th><i class="fa fa-bookmark"></i> Customer ID </th>
                                <th><i class=" fa fa-edit"></i> Order ID</th>
                                <th><i class="fa fa-edit"></i>Order Status</th>
                                
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                <% if (data && data.order){%>
                                    <% for(var i = 0; i < data.order.length; i++){ %>
                                <tr>
                                    
                                    <td><%= data.order[i].user_id %></td>
                                    <td><%= data.order[i].order_id %></td>
                                    <td><%= data.order[i].order_status %></td>
                                    <td></td>
                                    
                               <td>
                                       <% if ( data.order[i].order_status == 1){%>
                                        Order Confirmed
                                        <% } else{ %> 
                                        <a class="button_1" href="/admin/vieworder/<%= data.order[i].order_id %>">
                                        <button class="btn btn-success btn-xs">View</i></button></a>
                                        <% } %>
                                    
                                    </td>
                                </tr>
                                  
                                <% } %>
                                <% } %>
                           
                            
                            
                            </tbody>
                        </table>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            
            </div><!-- /row -->

      </section><! --/wrapper -->
