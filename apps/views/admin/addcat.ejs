
<%- include('main/head'); -%>
<%- include('main/sidebar'); -%>
<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Categories </h3>
<div class="row mt">
    <div class="col-lg-12">
      <h4><i class="fa fa-angle-right"></i> Categories</h4>
      <div class="form-panel">
        <div class="form">
          <form class="cmxform form-horizontal style-form" id="signupForm" method="POST" action="/admin/addcat">
            <div class="form-group ">
              <label for="cat_name" class="control-label col-lg-2">Category Names</label>
              <div class="col-lg-10">
                <input class="form-control " id="cid" name="categoryname" type="text" />
              </div>
           </div>

           
           
            <div class="form-group ">
              <label for="cat_name" class="control-label col-lg-2">Sub Category Names</label>
              <div class="col-lg-10">
              
                <select class="form-control" name="parent_category_name">
                  <option value="0"> Select Sub AC Category </option>
                   <% if (data && data.cate){%>
                         <% for(var i = 0; i < data.cate.length; i++){ %>
                 
                 <option value="<%= data.cate[i].id %>"> <%= data.cate[i].categoryname %> </option>
                           
                               
                             <% } %>
                        <% } %>
                  </select>
              </div>
           </div>

           
           
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-theme" type="submit">Add</button>
                <button class="btn btn-theme04" type="button">Cancel</button>
              </div>
            </div>
        
          </form>
        </div>
      </div>
      <!-- /form-panel -->
    </div>
    <!-- /col-lg-12 -->
  </div>
  <!-- /row -->
  </section>
