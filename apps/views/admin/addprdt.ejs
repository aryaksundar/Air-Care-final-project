<%- include('main/head'); -%>
<%- include('main/sidebar'); -%>
<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Add Brands</h3>
<div class="row mt">
  
      <div class="form-panel">
        <div class="form">
          <form class="cmxform form-horizontal style-form" id="signupForm" method="POST" action="/admin/addprdt" enctype="multipart/form-data">
           
            <div class="form-group ">
              <label for="Brand_Name" class="control-label col-lg-2">Brand_Name</label>
              <div class="col-lg-10">
                <input class=" form-control" id="bname" name="bname" type="text" />
              </div>
            </div>
            <div class="form-group ">
              <label for="Brand_modelcode" class="control-label col-lg-2">Model Name</label>
              <div class="col-lg-10">
                <input class="form-control " id="mcode" name="mname" type="text"/>
              </div>
            </div>
            <div class="form-group ">
              <label for="Brand_modelcode" class="control-label col-lg-2">Model Code</label>
              <div class="col-lg-10">
                <input class="form-control " id="mcode" name="mcode" type="text"/>
              </div>
            </div>
            <div class="form-group ">
              <label for="Brand_modelcode" class="control-label col-lg-2">Color</label>
              <div class="col-lg-10">
                <input class="form-control " id="mcode" name="color" type="text"/>
              </div>
            </div>
            <div class="form-group ">
              <label for="Brand_modelcode" class="control-label col-lg-2">Dimension</label>
              <div class="col-lg-10">
                <input class="form-control " id="dim" name="dim" type="text"/>
              </div>
            </div>
            <div class="form-group ">
              <label for="Brand_modelcode" class="control-label col-lg-2">Indoor Unit Weight</label>
              <div class="col-lg-10">
                <input class="form-control " id="wt" name="weight" type="text"/>
              </div>
            </div>
            <div class="form-group ">
              <label for="Units_in_Stock" class="control-label col-lg-2">Units_in_Stock</label>
              <div class="col-lg-10">
                <input class="form-control " id="ustock" name="unitinstock" type="number" />
              </div>
            </div>
            <div class="form-group ">
              <label for="sold" class="control-label col-lg-2">In_Sold</label>
              <div class="col-lg-10">
                <input class="form-control " id="sold" name="insold" type="number" />
              </div>
            </div>
            <div class="form-group ">
              <label for="Brand_Price" class="control-label col-lg-2">Brand_Price/unit</label>
              <div class="col-lg-10">
                <input class="form-control " id="bprice" name="brperunit" type="number" />
              </div>
            </div>
            <div class="form-group ">
              <label for="cat_name" class="control-label col-lg-2">Category Names</label>
              <div class="col-lg-10">
                <select class="form-control" name="categoryname">
                  <option value="0"> Select AC Category </option>
                   <% if (data && data.prdt){%>
                         <% for(var i = 0; i < data.prdt.length; i++){ %>
                 
                 <option value="<%= data.prdt[i].id %>"> <%= data.prdt[i].categoryname %> </option>
                           
                               
                             <% } %>
                        <% } %>
                  </select>
              </div>
           </div>
          
    <div class="form-group ">
              <label for="cat_name" class="control-label col-lg-2">Sub Category Names</label>
              <div class="col-lg-10">
              
                <select class="form-control" name="parent_category_name">
                  <option value="0"> Select Sub AC Category </option>
                   <% if (data && data.prdt){%>
                         <% for(var i = 0; i < data.prdt.length; i++){ %>
                 
                 <option value="<%= data.prdt[i].id %>"> <%= data.prdt[i].categoryname %> </option>
                           
                               
                             <% } %>
                        <% } %>
                  </select>
              </div>
           </div>
           
          
           
            <div class="form-group ">
              <label for="Warranty" class="control-label col-lg-2">AC Warranty_Period</label>
              <div class="col-lg-10">
                <input class="form-control " id="Warranty" name="warranty" type="time" />
              </div>
            </div>

            <div class="form-group ">
              <label for="Warranty" class="control-label col-lg-2">Warranty Summary</label>
              <div class="col-lg-10">
                <input class="form-control " id="warsum" name="warsum" type="text" />
              </div>
            </div>
            
            
            <div class="form-group ">
              <label for="Warranty" class="control-label col-lg-2">AC Image</label>
             <div class="col-lg-10">
                <input type="file" class="form-control" id="gallery-photo-add" onchange="loadFile(event)"  name="image" multiple>
                 <table>
                <tr>
                  <td><div class="gallery" style="max-width:100px;"></div></td>
                </tr>
              </table>
                
              </div>
            </div>
           
            <div class="form-group">
              <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-theme" type="submit">Add</button>
                <button class="btn btn-theme04" type="button">Cancel</button>
              </div>
            </div>

        
          </form>
        </div>
      </div>
      <!-- /form-panel -->
    
    <!-- /col-lg-12 -->
  </div>
  <!-- /row -->
  </section>

        <%- include('main/foot'); -%>
    