      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Order Details</h3>
              <div class="row">
            

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <form action="/admin/vieworder" method="post">
                            <input type="hidden" name="orderid" value="<%=data.orderind[0].order_id %>">
                            <table class="table table-striped table-advance table-hover">
                                
                                <hr>
                            <thead>
                            <tr>
                                <th><i class="fa fa-bullhorn"></i> ID</th>
                                <th><i class=" fa fa-edit"></i> Product Name</th>
                                <th><i class="fa fa-bookmark"></i> Quantity </th>
                                <th><i class="fa fa-edit"></i>Price</th>
                                <th><i class="fa fa-edit"></i>Total Price</th>
                               

                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                <% var totprice=0;
                                    if (data && data.orderind){%>
                                    <% for(var i = 0; i < data.orderind.length; i++){ %>
                                    <% totprice+=data.orderind[i].brperunit*data.orderind[i].qty %>
                                    
                                <tr>
                                
                                    <td><%= data.orderind[i].user_id %></td>
                                    <td><%= data.orderind[i].brname %></td>
                                    <td><%= data.orderind[i].qty %></td>
                                    <td><%= data.orderind[i].brperunit %></td>
                                    <td><%= data.orderind[i].total_price %></td>
                                   
                                
                                    <td>
                                        <a class="button_1" href="/admin/vieworder">
                                        <button class="btn btn-success btn-xs">Confirm order</button></i></button></a>
                                       
                                    </td>
                                </tr>
                                  
                                <% } %>
                                <% } %>
                           
                            
                            
                            </tbody>
                        </table>
                        </form>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            
            </div><!-- /row -->

      </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->


