        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Bill generation for Services </h3>
              <div class="row">
            

            <div class="row mt">
                <div class="col-md-12">
                    <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                                
