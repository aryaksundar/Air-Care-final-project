                                <th>Complaint Id</th>
                                <th>Work Duration</th>
                                <th>Complaint Rectified</th>
                                <th>Remarks</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                <% if (data && data.comp){%>
                                    <% for(var i = 0; i < data.comp.length; i++){ %>
                                <tr>
                                    <td><%= data.comp[i].compid %></td>
                                    <td><%= data.comp[i].work %> </td>
                                    <td><%= data.comp[i].compdes %> </td>
                                    <td><%= data.comp[i].remark %> </td>
                                    
                                <td> </td>
                                <td>
                                    <div class="form-group ">
                                        <label for="cat_name" class="control-label col-lg-2">Charges</label>
                                        <div class="col-lg-10">
                                          <input class="form-control " data-cid="<%= data.comp[i].compid %>" id="charge" name="charge" type="text" />
                                        </div>
                                     </div>
                                 </td>
                                </tr>
                                  
                                <% } %>
                                <% } %>
                           
                            
                            
                            </tbody>
                        </table>
                    </div><!-- /content-panel -->
                </div><!-- /col-md-12 -->
            
            </div><!-- /row -->

      </section><! --/wrapper -->
